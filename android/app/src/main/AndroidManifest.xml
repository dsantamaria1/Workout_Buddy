<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mycompany.workoutbuddy" >

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GenWorkout"
            android:label="@string/title_activity_gen_workout" >
        </activity>
        <activity
            android:name=".ChooseWorkout"
            android:label="@string/title_activity_choose_workout" >
        </activity>
        <activity
            android:name=".DisplayWorkout"
            android:label="@string/title_activity_display_workout" >
        </activity>
        <activity
            android:name=".WorkoutHistory"
            android:label="@string/title_activity_workout_history" >
        </activity>
        <activity
            android:name=".StopWatchTimer"
            android:label="@string/title_activity_stop_watch_timer" >
        </activity>
        <activity
            android:name=".RunHistoryGraph"
            android:label="@string/title_activity_run_history_graph">
        </activity>
    </application>

</manifest>
