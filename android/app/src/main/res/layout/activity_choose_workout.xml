<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.mycompany.workoutbuddy.ChooseWorkout">

    <TextView
        android:text="@string/choose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingBottom = "40sp"
        android:id="@+id/title"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/push_workout"
        android:text="Upper Body Push/Lower Body Pull"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:background="@color/orange"
        android:onClick="GetPushWorkout"
        android:layout_below="@id/title"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pull_workout"
        android:text="Upper Body Pull/Lower Body Push"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:background="@color/gray"
        android:layout_marginTop="30dp"
        android:layout_below="@id/push_workout"
        android:layout_centerInParent="true"
        android:onClick="GetPullWorkout"/>

</RelativeLayout>
